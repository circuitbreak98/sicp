#lang racket
(define (make-rat n d)
  (define (pos-rat? n d)
    (> (* n d) 0))
  (let ((n (if (pos-rat? n d) (abs n) (- (abs n))))
        (d (abs d))
        (g (gcd n d)))
    (cons (/ n g ) (/ d g))))

(define (make-rat1 n d)
  (let ((g (gcd n d)))
    (cons (/ n g ) (/ d g))))

(define (numer x) (car x))
(define (denom x) (cdr x))

(define (add-rat x y)
  (make-rat (+ (* (numer x) (denom y))
               (* (numer y) (denom x)))
            (* (denom x) (denom y))))

(define (sub-rat x y)
  (make-rat (- (* (numer x) (denom y))
               (* (numer y) (denom x)))
            (* (denom x) (denom y))))
             
(define (mul-rat x y)
  (make-rat (* (numer x) (numer y))
            (* (denom x) (denom y))))

(define (div-rat x y)
  (make-rat (* (numer x) (denom y))
            (* (denom x) (numer y))))
   
(define (equal-rat? x y)
  (= (* (numer x) (denom y))
     (* (numer y) (denom x))))
               
(define (print-rat x)
  (newline)
  (display (numer x))
  (display "/")
  (display (denom x)))
